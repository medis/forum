#!/usr/bin/env bash

# Set environment variables for dev or CI
export APP_PORT=${APP_PORT:-8000}
export DB_PORT=${DB_PORT:-33006}
export DB_ROOT_PASS=${DB_ROOT_PASS:-root}
export DB_NAME=${DB_DATABASE:-forum}
export DB_USER=${DB_USER:-forum}
export DB_PASS=${DB_PASS:-forum_pass}

COMPOSE_FILE="dev"

# $BUILD_NUMBER comes from Jenkins.
if [ ! -z "$BUILD_NUMBER" ]; then
  COMPOSE_FILE="ci"
fi

COMPOSE="docker-compose -f docker-compose.$COMPOSE_FILE.yml"

if [ $# -gt 0 ]; then
  if [ "$1" == "art" ]; then
    shift 1
    $COMPOSE run --rm \
      -w /var/www/html \
      app \
      php artisan "$@"

  # If "composer" is used, pass-thru to "composer"
  # inside a new container
  elif [ "$1" == "composer" ]; then
    shift 1
    $COMPOSE run --rm \
      -w /var/www/html \
      app \
      composer "$@"

  # If "test" is used, run unit tests,
  # pass-thru any extra arguments to php-unit
  elif [ "$1" == "test" ]; then
    shift 1
    $COMPOSE run --rm \
      -w /var/www/html \
      app \
      ./vendor/bin/phpunit "$@"

  # If "npm" is used, run npm
  # from our node container
  elif [ "$1" == "npm" ]; then
    shift 1
    $COMPOSE run --rm \
      -w /var/www/html \
      node \
      npm "$@"

  # If "gulp" is used, run gulp
  # from our node container
  elif [ "$1" == "gulp" ]; then
    shift 1
    $COMPOSE run --rm \
      -w /var/www/html \
      node \
      ./node_modules/.bin/gulp "$@"
  else
    $COMPOSE "$@"
  fi
else
  $COMPOSE ps
fi